n1 = int(input('Primeiro numero: '))
n2 = int(input('Segundo numero: '))
op = 0

while op != 5:
    print('\033[36m*\033[m'*40)
    print('''Escolha oque deseja ...
    [1] Somar
    [2] Multiplicar
    [3] Maior
    [4] Novos números
    [5] Sair do programa''')
    op = int(input('Qual das Opções vc deseja realizar: '))
    if op == 1:
        n3 = n1 + n2
        print('\033[36m*\033[m' *40)
        print('A \033[33mSOMA\033[m de {} + {} = {}'.format(n1,n2,n3))
    elif op == 2:
        n3 = n1 * n2
        print('\033[36m*\033[m' * 40)
        print('A \033[33mMULTIPLICAÇÃO\033[m de {} x {} = {}'.format(n1,n2,n3))
    elif op == 3:
        if n1 > n2:
            print('\033[36m*\033[m' * 40)
            print('{} é \033[33mMAIOR\033[m que {}'.format(n1,n2))
        elif n2 > n1:
            print('\033[36m*\033[m' * 40)
            print('{} é \033[33mMAIOR\033[m que {}'.format(n2,n1))
        elif n1 == n2:
            print('\033[36m*\033[m' * 40)
            print('São \033[33mIGUAIS\033[m')
    elif op == 4:
        print('Informe os numeros novamente.')
        n1 = int(input('Primeiro: '))
        n2 = int(input('Segundo: '))
    elif op == 5:
        print('\033[36m*\033[m' * 40)
        print('\033[33mFinalizando\033[m...')
    else:
        print('\033[36m*\033[m' * 40)
        print('Opção \033[31mINVALIDA\033[m, tente novamente.')
